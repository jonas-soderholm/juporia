generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User table
model User {
  id            String     @id // Supabase auth.users.id
  email         String     @unique
  // subscriptions Subscription[]
  progress      Progress[]
  invoices      Invoice[] 
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

